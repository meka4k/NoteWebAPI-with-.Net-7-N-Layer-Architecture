@model NoteDto
@{
    ViewData["Title"] = "UpdateNote";
}

<form method="post">

    <input type="hidden" asp-for="Id" />

    <label>Note Tag</label>
    <input type="text" asp-for="Tag" class="form-control" />

    <label>Note Title</label>
    <input type="text" asp-for="Title" class="form-control" />

    <label>Note Content</label>
    <input type="text" asp-for="Content" class="form-control" />


    <br />
    <button class="btn btn-primary">Update Note</button>
</form>

